using System;
class Program
{
    static void Main(string[] args)
    {
		 Console.WriteLine("請使用者輸入一句話:");
         string str1 = Console.ReadLine();
		 string str2= "hello";
		if(str1.EndsWith("hello"))
		{
			 Console.WriteLine(str1.Replace("替換後的字串",str1));
		}
		
	   else
	   {
		str1 = str1.Remove(str1.Length -1,1); 
        string replacedString = str1+str2;
        Console.WriteLine("更新後的字串: " + replacedString);
	   }
       
        
	
		
	}
}
